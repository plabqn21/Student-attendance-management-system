@using System.Activities.Expressions
@model IEnumerable<Student_attendance_management_system.Models.CourseAssignToTeacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    <script src="~/Content/DataTable/DataTableJS.js"></script>

    <link href="~/Content/DataTable/DataTableCss.css" rel="stylesheet" />
}
<div style="margin-left: 140px">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create",null,new{@class="btn btn-primary"})
    </p>
    <table class="table" id="datatable">
        <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Course.CourseCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser.Name)
            </th>
            <th></th>
        </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Course.CourseCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semester.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CourseAssignToTeacherId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.CourseAssignToTeacherId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').dataTable();
    });
</script>