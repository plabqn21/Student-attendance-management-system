@model IEnumerable<Student_attendance_management_system.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Student", "Create",null,new{@class="btn btn-primary"})
</p>

@using (Html.BeginForm("Index", "Students"))
{

    <label class="label label-default">Search Student : </label><br />
    @Html.TextBox("StudentId", null, new { @class = "form-control", PlaceHolder = "ex:B120304021/BSC2012-13)" })<br />
    <button type="submit" class="btn btn-info">Search</button>
}
<br /><br />

<table class="table">
    <tr>
       
       
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Sessiontbl.Session)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Semester.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
       
        <td>
            @Html.DisplayFor(modelItem => item.Sessiontbl.Session)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semester.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id },new{@class="btn btn-info"}) 
           
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
