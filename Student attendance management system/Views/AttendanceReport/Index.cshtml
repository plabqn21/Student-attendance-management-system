@model IEnumerable<Student_attendance_management_system.Models.ViewModel.FinalAttendanceReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p align="center">
    <img src="~/Content/Images/Universitylogo.png" width="100" height="100" />
    <h3 align="center"><b>Department of Computer Science & Engineering</b></h3>
    <h4 align="center">Jagannath University , Dhaka   <p align="right">  @DateTime.Now</p></h4>
    <h5>
        <p align="center">Semester: @ViewBag.SemesterName</p>
        <p align="center">Batch: @ViewBag.Batch</p>
        <p align="left">Course Teacher:  @ViewBag.TeacherName</p>
        <p align="right">Course Name:   @ViewBag.CourseName</p>
        <p align="center"> <b>Total Number of Class:@ViewBag.Message</b></p>

</h5>
</p> 

<table class=" table table-striped table-bordered" align="center">

   
        
      
   
    <tr>
        <th>
            @Html.DisplayName("Student Id")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Present") 
        </th>
        <th>
            @Html.DisplayName("Absent")
        </th>
        <th>
            @Html.DisplayName("Leave")
        </th>
        <th>
            @Html.DisplayName("Attendance in Percent")
        </th>
        <th>
            @Html.DisplayName("Total Mark")
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPresent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAbsent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalLeave)
            </td>  <td>
                @Html.DisplayFor(modelItem => item.Percent) %
            </td>  <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>

        </tr>
    }

</table>
