@model IEnumerable<Student_attendance_management_system.Models.Attendance>

@{
    ViewBag.Title = "SingleDayAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p align="center">
    <img src="~/Content/Images/Universitylogo.png" width="100" height="100" />
    <h3 align="center"><b>Department of Computer Science & Engineering</b></h3>
    <h4 align="center">Jagannath University , Dhaka
<p align="right"> Date: @ViewBag.Date</p></h4>
<h5>
    <p align="center">Semester: @ViewBag.SemesterName</p>
    <p align="center">Batch: @ViewBag.Batch</p>
    <p align="left">Course Teacher:  @ViewBag.TeacherName</p>
    <p align="right">Course Name:   @ViewBag.CourseName</p>
   

</h5>
</p> 


<table class="table table-bordered">
    <tr>
      
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentId)
        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
      
     
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Student.StudentId)
        </td>
        <td >
            @Html.DisplayFor(modelItem => item.Status.Name, new { id = "status" })
        </td>
    
       
       
    </tr>
}

</table>


<script src="~/Scripts/jquery-3.1.1.js"></script>
<script>

    $(document).ready(function () {


        if ($('#status').value == "Absent") {
            $('table td').css('color', 'red');
        }
        

    });
</script>

<div align="right">
    <button class="btn btn-primary" onclick="myFunction()">Print Report</button>
</div>
<script>
    function myFunction() {
        window.print();
    }
</script>